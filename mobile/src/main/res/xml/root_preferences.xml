<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    app:iconSpaceReserved="false">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/sync_header">

        <rikka.material.preference.MaterialSwitchPreference
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="dnd_sync_key"
            app:title="@string/sync_title" />

        <rikka.material.preference.MaterialSwitchPreference
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="bedtime_sync_key"
            app:summary="@string/sync_bedtime_summary"
            app:title="@string/sync_bedtime_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/permission_header">

        <rikka.material.preference.MaterialSwitchPreference
            app:iconSpaceReserved="false"
            app:key="dnd_permission_key"
            app:summary="@string/dnd_permission_not_allowed"
            app:title="@string/dnd_permission_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/help_header">

        <Preference
            app:iconSpaceReserved="false"
            app:key="help"
            app:summary="@string/help_center_summary"
            app:title="@string/help_center" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="github"
            app:summary="@string/github_summary"
            app:title="@string/github" />

    </PreferenceCategory>

</PreferenceScreen>